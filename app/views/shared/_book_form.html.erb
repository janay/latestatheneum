<%= form_for @book do |f| %>
<%= render 'shared/error_messages2' %>

  <div class="field">
	<%= f.label :title %><br />
    <%= f.text_area :title %>
  </div>
<div class="field">
	<%= f.label :authors %><br />
    <%= f.text_area :authors %>
  </div>
<div class="field">
	<%= f.label :isbn %><br />
    <%= f.number_field :isbn %>
  </div>
  <div class="actions">
    <%= f.submit "Add" %>
  </div>
<% end %>